@model string

<h1>MIDI Created</h1>
<style>
  midi-visualizer {
    background-color: rgba(0, 0, 0, 0.5); /* This sets the background to a semi-transparent black color */
  }
</style>
<p>Click the play button to listen to the generated song.</p>
@{
  string midiTag = $"<midi-player src=\"/Songs/{Html.Raw(ViewBag.FileUrl)}\" sound-font visualizer=\"#myVisualizer\"></midi-player>";
  string midiVis = "<midi-visualizer type=\"piano-roll\" id=\"myVisualizer\"></midi-visualizer>";
  string scriptTag = "<script src=\"https://cdn.jsdelivr.net/combine/npm/tone@14.7.58,npm/@magenta/music@1.23.1/es6/core.js,npm/focus-visible@5,npm/html-midi-player@1.4.0\"></script>";
}

@Html.Raw(midiTag)
@Html.Raw(midiVis)
@Html.Raw(scriptTag)


